\newcommand*\VerBar[2]{%
{\color{#1}\rule{#2}{4.25cm}}}

\newcommand*\HorBar[2]{%
{\color{#1}\rule{#2}{\paperwidth}}}

\newif\ifBgUse

\newif\ifBgF


\AddEverypageHook{%
\ifBgUse%
\ifodd\value{page}
\backgroundsetup{position={current page.north east},vshift=1.5cm,%
contents={\VerBar{gray}{2\paperheight}}}%
\else
\backgroundsetup{position={current page.north west},vshift=-1.5cm,%
contents={\VerBar{gray}{2\paperheight}}}%
\fi%
\BgMaterial%
\fi}

\AddEverypageHook{
\ifBgF
\backgroundsetup{position={current page.north west},vshift=-0.5\paperwidth,%
contents={\HorBar{gray}{30cm}}}%
\BgMaterial%
\fi}

